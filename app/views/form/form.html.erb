<% provide(:title, 'Get counted!') %>
<h1>Time to get counted</h1>
<h2>This is the data collection page</h2>
 

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @form, local: true) do |f| %>

      <div class="field">
        <%= f.label :id_number %>
        <%= f.text_field :id_number %>
      </div>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :gender %>
        <%= f.text_field :gender %>
      </div>

      <div class="field">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
      </div>

      <div class="field">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
      
      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class="field">
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>

      <div class="field">
        <%= f.label :house_size %>
        <%= f.text_field :house_size %>
      </div>

      <div class="field">
        <%= f.label :relationship_in_household %>
        <%= f.text_field :relationship %>
      </div>

      <div class="field">
        <%= f.label :marital_status %>
        <%= f.text_field :marital_status %>
      </div>

      <div class="field">
        <%= f.label :religion %>
        <%= f.text_field :religion %>
      </div>

      <div class="field">
        <%= f.label :education_level %>
        <%= f.text_field :education %>
      </div>

      <div class="field">
        <%= f.label :employment %>
        <%= f.text_field :employment %>
      </div>

      <div class="field">
        <%= f.label :income_level %>
        <%= f.text_field :income_level %>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>